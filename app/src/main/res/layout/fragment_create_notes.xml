<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shapeforedittext"
    tools:context=".UI.CreateNotesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/shapeforedittext2"
            android:hint="  Title"
            android:shadowColor="@color/white"
            android:shadowDx="0"
            android:shadowDy="200"
            android:shadowRadius="30"
            android:paddingLeft="20dp"
            android:ems="10"
            android:paddingRight="20dp" />

        <EditText
            android:id="@+id/et_subtitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/shapeforedittext2"
            android:hint="  SubTitle.."
            android:paddingLeft="20dp"
            android:paddingRight="10dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_width="25dp"
                android:id="@+id/PRed"
                android:layout_height="25dp"
                android:background="@drawable/red_dot"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="25dp"
                android:id="@+id/PYello"
                android:layout_height="25dp"
                android:background="@drawable/yello_dot"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="25dp"
                android:id="@+id/PGreen"
                android:layout_height="25dp"
                android:background="@drawable/green_dot"
                android:layout_margin="10dp"/>
        </LinearLayout>


        <EditText
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="10dp"
            android:background="@drawable/shapeforedittext2"
            android:hint="  Notes.."
            android:paddingLeft="20dp"
            android:textColor="@color/black"
            android:paddingRight="10dp" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_saveNotes"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/baseline_add_task_24"
        />

</FrameLayout>